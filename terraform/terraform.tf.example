# Example Terraform configuration for remote state management
# Copy this file to terraform.tf and customize for your environment

terraform {
  required_version = ">= 1.0"
  
  # Remote state backend configuration
  backend "s3" {
    bucket         = "your-terraform-state-bucket"
    key            = "terraform.tfstate"
    region         = "us-west-2"
    encrypt        = true
    dynamodb_table = "terraform-state-lock"
  }
  
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
  }
}

# Example provider configuration
provider "aws" {
  region = "us-west-2"
  
  default_tags {
    tags = {
      Environment = "dev"
      Project     = "my-project"
      ManagedBy   = "Terraform"
    }
  }
}
